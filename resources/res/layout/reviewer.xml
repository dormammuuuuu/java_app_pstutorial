<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout android:theme="@style/AppTheme.AppBarOverlay" android:layout_width="match_parent" android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar android:id="@+id/_toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:orientation="horizontal" android:id="@+id/linear15" android:background="#81c784" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/linear17" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/textview24" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Answers are highlighted with red color."/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView android:id="@+id/vscroll1" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/linear1" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear2" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/textview2" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Paintbucket tool"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview3" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="fills adjacent pixels that are similar in color value to the pixels you click."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear3" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:id="@+id/textview4" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="P"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview5" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="is the shortcut key to activate the pen tool."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear4" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:id="@+id/textview6" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="B"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview7" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="is the shortcut key to activate the pen tool."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear5" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:layout_gravity="center_vertical" android:id="@+id/textview8" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Art history brush"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview9" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="paints with stylized stroke, using the source data from a specified history state or snapshot."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear6" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:id="@+id/textview10" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Brush"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview11" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="is a basic painting tool."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear7" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:layout_gravity="center_vertical" android:id="@+id/textview12" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Painting Tools"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview13" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="tool is used to alter an image by creating strokes and adding color, just like in the real world."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear8" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:layout_gravity="center_vertical" android:id="@+id/textview14" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Elliptical Marquee Tool"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview15" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="is designed to create circular selections."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear9" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="#000000" android:layout_gravity="center_vertical" android:id="@+id/textview16" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="M is the keyboard shortcut for"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:id="@+id/textview17" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Elliptical/Rectangular Marquee Tool."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear10" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:layout_gravity="center_vertical" android:id="@+id/textview18" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Magnetic Lasso Tool"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview19" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="automatically creates selection clinging to edges of contrast objects."/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear11" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#b71c1c" android:id="@+id/textview20" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pen"/>
                    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/textview21" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="tool has hard edges by default."/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
